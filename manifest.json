{
  "manifest_version": 2,
  "name": "WaitBlock",
  "description": "Setup wait period for time-wasting sites. Reflect on your core values while waiting.",
  "version": "1.0.0",
  "minimum_chrome_version": "40",

  "permissions": [
    "storage"
  ],
  "icons": { "128": "icon.png" },
  "web_accessible_resources": [
    "template.html"
  ],
  "background": {
    "scripts": ["underscore-1.8.3.min.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
